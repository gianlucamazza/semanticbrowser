# Semantic Browser - Environment Variables Configuration
# Copy this file to .env and customize as needed

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Logging Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Log level: trace, debug, info, warn, error
RUST_LOG=info

# Specific module logging (optional)
# RUST_LOG=semantic_browser=debug,tower_http=info

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Knowledge Graph Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Path for Knowledge Graph persistence (absolute or relative)
# Leave empty for in-memory storage
KG_PERSIST_PATH=./data/kg

# Docker volume path for KG data
KG_DATA_PATH=./data/kg

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Machine Learning Models
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Named Entity Recognition model path (ONNX format)
# Leave empty to use regex-based fallback
NER_MODEL_PATH=

# Example with actual model:
# NER_MODEL_PATH=./models/ner-en.onnx

# Knowledge Graph inference model path (ONNX format)
# Leave empty to use rule-based inference
KG_INFERENCE_MODEL_PATH=

# Example with actual model:
# KG_INFERENCE_MODEL_PATH=./models/kg-inference.onnx

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# PyO3 Configuration (Python Integration)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# PyO3 ABI compatibility
PYO3_USE_ABI3_FORWARD_COMPATIBILITY=1

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# API Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Server bind address (change for production)
# SERVER_HOST=0.0.0.0
# SERVER_PORT=3000

# Authentication token (CHANGE IN PRODUCTION!)
# API_SECRET=your-secret-token-here

# Rate limiting
# RATE_LIMIT_REQUESTS=10
# RATE_LIMIT_WINDOW_SECONDS=60

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Docker Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Compose project name
# COMPOSE_PROJECT_NAME=semantic-browser

# Resource limits (uncomment to use)
# DOCKER_CPU_LIMIT=2
# DOCKER_MEMORY_LIMIT=2G

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Development/Testing
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Rust backtrace (for debugging)
RUST_BACKTRACE=1

# Test server URL (for integration tests)
# TEST_SERVER_URL=http://localhost:3000
